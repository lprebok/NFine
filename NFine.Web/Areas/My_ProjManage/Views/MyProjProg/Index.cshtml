
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}

<script>
    $(function () {
        gridList();
    })
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/My_ProjManage/MyProjProg/GetGridJson",
            height: $(window).height() - 96,
            rownumbers: true,
            colModel: [
                
                { label: "主键", name: "FBillNO", hidden: true, key: true },
                //{ label: '年', name: 'FName', width: 100, align: 'left' },
                { label: '周', name: 'FProCode', width: 100, align: 'left' },
                {
                    label: '开始日期', name: 'FStarDate', width: 100, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                },
                {
                    label: '结束日期', name: 'FEndDate', width: 100, height: 60, align: 'left',
                    formatter: "date", formatoptions: { srcformat: 'Y-m-d', newformat: 'Y-m-d' }
                },
                {
                    label: "项目", name: "FProName", width: 100, height: 60, align: "left"
                },
                { label: '本周目标', name: 'FThisWeekGoal', width: 200, align: 'left' },
                { label: '本周完成', name: 'FThisWorkContent', width: 200, align: 'left' },
                { label: '下周计划', name: 'FNextWorkPlan', width: 200, align: 'left' }
            ],
            gridComplete: function () {
                var grid = $("#gridList");
                var ids = grid.getDataIDs();
                for (var i = 0; i < ids.length; i++) {
                    grid.setRowData(ids[i], false, { height: 80 })
                };
            }
        });
        $("#btn_search").click(function () {
            $gridList.jqGrid('setGridParam', {
                postData: { keyword: $("#txt_keyword").val() },
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增项目",
            url: "/My_ProjManage/MyProjProg/Form",
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
        var keyValue = $("#gridList").jqGridRowValue().FBillNO;
        $.modalOpen({
            id: "Form",
            title: "修改项目",
            url: "/My_ProjManage/MyProjProg/Form?keyValue=" + keyValue,
            width: "700px",
            height: "510px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_delete() {
        var delkeyValue = $("#gridList").jqGridRowValue().FID;
        $.deleteForm({
            url: "/My_ProjManage/MyProjProg/DeleteForm?keyValue=" + delkeyValue,
            param: { keyValue: $("#gridList").jqGridRowValue().F_Id },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
    function btn_details() {
        var keyValue = $("#gridList").jqGridRowValue().F_Id;
        $.modalOpen({
            id: "Details",
            title: "查看角色",
            url: "/My_ProjManage/MyProjProg/Details?keyValue=" + keyValue,
            width: "550px",
            height: "620px",
            btn: null,
        });
    }
</script>

<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        <div class="btn-group">
            <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建项目</a>
        </div>
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改项目</a></li>
                <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除项目</a></li>
                <li>@*<a id="NF-Details" authorize="yes" onclick="btn_details()"><i class="fa fa-search-plus"></i>查看角色</a>*@</li>
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
        <script>$('.toolbar').authorizeButton()</script>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        <input id="txt_keyword" type="text" class="form-control" placeholder="项目名称/项目代码" style="width: 200px;">
                        <span class="input-group-btn">
                            <button id="btn_search" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
</div>

